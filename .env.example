# AI-Ticker Environment Configuration
# Copy this file to .env and configure your settings

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# API Provider Keys (configure at least one)
OPENROUTER_API_KEY=your-openrouter-api-key
TOGETHER_API_KEY=your-together-api-key
DEEPINFRA_API_KEY=your-deepinfra-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GROQ_API_KEY=your-groq-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
MISTRAL_API_KEY=your-mistral-api-key
YOUCOM_API_KEY=your-youcom-api-key

# Prompt Configuration
PROMPT_PROFILE=default
SYSTEM_PROMPT=
USER_PROMPT=

# Cache Settings
CACHE_FILE=message_cache.json
LAST_FILE=last_messages.json
FUZZY_THRESHOLD=85
CACHE_PROBABILITY=0.6
LAST_LIMIT=3
MAX_CACHE_SIZE=200

# Performance Settings
COMPRESS_LEVEL=6
COMPRESS_MIN_SIZE=500
API_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_API=10 per minute

# Plugin System Configuration (v1.1.0+)
PLUGINS_ENABLED=True
PLUGIN_AUTO_DISCOVERY=True
PLUGIN_CONFIG_FILE=plugin_config.json
BUILTIN_PLUGINS_ENABLED=True
CUSTOM_PLUGINS_PATH=plugins/custom
PLUGIN_CACHE_SIZE=50
PLUGIN_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=ai-ticker.log

# Development Settings
FLASK_ENV=development
FLASK_DEBUG=False
